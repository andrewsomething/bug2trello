{
  "name": "Bug 2 Trello",
  "short_name": "bug2trello",
  "version": "0.6",
  "manifest_version": 2,
  "description": "Import bug information to a Trello card.",
  "options_page": "settings.html",
  "browser_action": {
    "default_title": "Bugs 2 Trello",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://*/",
    "http://*/"
  ],
  "web_accessible_resources": ["settings.html"],
  "content_security_policy": "script-src 'self' https://api.trello.com https://ajax.googleapis.com https://api.launchpad.net; object-src 'self'"
}
